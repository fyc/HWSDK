<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/login_bottom_layout_height"
    android:layout_marginLeft="@dimen/margin_40px"
    android:layout_marginRight="@dimen/margin_40px">


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_t3"
            android:lines="1"
            android:clickable="true"
            android:id="@+id/btn_login_container_forget_password"
            android:textColor="@color/str_normal_light_black"
            android:background="@null"
            android:text="@string/forget_password_with_symbol"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:lines="1"
            android:clickable="true"
            android:textSize="@dimen/text_size_t3"
            android:id="@+id/btn_login_container_back_register"
            android:textColor="@color/str_normal_light_black"
            android:background="@null"
            android:text="@string/str_register_line"/>

</RelativeLayout>